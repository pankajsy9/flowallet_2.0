                </div>
                <div class="row top_padder">
                    <!-- For security reasons, we don't load the coin widget on wallet pages-->
                        {{#isWallet current_url}}
                            <div class="col-xs-12 col-sm-6 col-md-12 text-center">
                        {{else}}
                            <div class="col-xs-6 col-md-6 text-center">
                                <div id="coinwidget-bitcoin-17PPTHmS8N34KYKdDc4Gn1psabteGS8EE3"></div>
                        {{/isWallet}}
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 copyright">
                <div class="copyright_holder">
                    <div class="copyright_bottom">
                    
                    </div>
                </div>
